{
  "name": "nexeth",
  "version": "1.0.0",
  "description": "A TypeScript implementation of an Ethereum P2P network protocol",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node index.ts",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.ts\"",
    "clean": "rimraf dist",
    "prepare": "npm run build",
    "check-types": "tsc --noEmit",
    "validate": "npm run lint && npm run check-types"
  },
  "keywords": [
    "ethereum",
    "p2p",
    "blockchain",
    "typescript",
    "network"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "crc": "^4.3.2",
    "events": "^3.3.0"
  },
  "devDependencies": {
    "@types/crc": "^3.8.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.37.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.7",
    "rimraf": "^4.4.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3"
  }
} 